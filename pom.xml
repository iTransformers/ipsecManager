    <repositories>

        <repository>
            <id>iTransformers Repo</id>
            <name>repo</name>
            <url>http://repo.itransformers.net/repos</url>
        </repository>

        <repository>
        <id>jfrogrepo-libs-release-local</id>
        <name>jfrogrepo-releases</name>
        <url>http://build.itransformers.net:8081/artifactory/libs-release-local</url>
        </repository>

        <repository>
        <id>jfrogrepo-ext-release-local</id>
        <name>jfrogrepo-releases</name>
        <url>http://build.itransformers.net:8081/artifactory/ext-release-local</url>
        </repository>

    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.4.3</version>

                <executions>
                    <execution>
                        <phase>package</phase>
                        <id>ipsecManager</id>
                        <goals>
                            <goal>shade</goal>

                        </goals>
                        <configuration>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>net.itransformers.ipsec.IpsecProjectLauncher</mainClass>
                                </transformer>

                            </transformers>
                            <finalName>ipsecManager</finalName>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>